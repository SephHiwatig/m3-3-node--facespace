<%- include('../partials/header') %>
<div class="profile-page">
    <div class="profile-page--banner"></div>
    <div>
        <div class="profile-page__user">
            <img class="profile-page__user--avatar" src="<%- user.avatarUrl %>" alt="profile photo"/>
            <h2><%- user.name %></h2>
        </div>
        <div class="profile-page__friends">
            <h3><%= user.name %>'s Friends</h3>
            <ul class="profile-page__friends--list">
                <% friends.forEach(friend => { %>
                <li class="friend">
                    <img src="<%- friend.avatarUrl %>" alt="friend's photo">
                    <p><%- friend.name %></p>
                </li>    
                <% }) %>
            </ul>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>